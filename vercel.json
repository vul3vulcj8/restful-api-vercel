{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["db/db.json"]
      }
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*",
      "hook": "wait"
    }
  ],
  "hooks": {
    "wait": {
      "type": "wait",
      "value": {
        "duration": 1500
      }
    }
  },

  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
